<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.margaret.yourui_fueltrack.AddNewLogEntryActivity"
    android:background="#d4f599">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/dateText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/StationText"
        android:layout_alignEnd="@+id/StationText"
        android:background="#e1e57d"
        android:layout_alignLeft="@+id/StationText"
        android:layout_alignStart="@+id/StationText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Station"
        android:id="@+id/textView2"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StationText"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/FuelGradeText"
        android:layout_alignEnd="@+id/FuelGradeText"
        android:layout_toEndOf="@+id/textView2"
        android:background="#e1e57d"
        android:layout_alignLeft="@+id/OdometerText"
        android:layout_alignStart="@+id/OdometerText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Odmeter"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/OdometerText"
        android:layout_alignBottom="@+id/OdometerText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/OdometerText"
        android:background="#e1e57d"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fuel Grade"
        android:id="@+id/textView4"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FuelGradeText"
        android:background="#e1e57d"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignRight="@+id/FuelAmountText"
        android:layout_alignEnd="@+id/FuelAmountText"
        android:layout_alignLeft="@+id/FuelAmountText"
        android:layout_alignStart="@+id/FuelAmountText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fuel Amount"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/FuelAmountText"
        android:background="#e1e57d"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fuel Unit Cost"
        android:id="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/FuelUnitCostText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/FuelUnitCostText"
        android:background="#e1e57d"
        android:layout_above="@+id/Cancelbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/FuelAmountText"
        android:layout_alignEnd="@+id/FuelAmountText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/Cancelbutton"
        android:background="#87b9d8"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/FuelAmountText"
        android:layout_alignEnd="@+id/FuelAmountText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/Addbutton"
        android:layout_alignTop="@+id/Cancelbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#87b9d8" />

</RelativeLayout>
